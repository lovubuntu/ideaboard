<% if @idea.errors.any? %>
  <% @idea.errors.full_messages.each do |msg|%>
    <div class = "alert-box alert">
      <%= msg %>
    </div>
  <% end %>
<%end%>
<h1>Create Ideas</h1>
<%= form_for(@idea) do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :votes%>
  <%= f.text_field :votes%>
  <%= f.label :description%>
  <%= f.text_area :description%>
  <%= f.submit class: 'button' %>
<%end%>
